<title>Update User Profile</title>
  <link rel="stylesheet" href="https://code.getmdl.io/1.1.3/material.orange-indigo.min.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  <script defer src="https://code.getmdl.io/1.1.3/material.min.js"></script>
  <link type="image/x-icon" rel="shortcut icon" href="favicon-1.ico"/>
  <link type="text/css" rel="stylesheet" href="style.css">
        
        
<!-- Container for the demo -->
<div class="mdl-card mdl-shadow--2dp mdl-cell mdl-cell--12-col mdl-cell--12-col-tablet mdl-cell--12-col-desktop" id="login-box">
    <div class="mdl-card__title mdl-color--light-green-600 mdl-color-text--white">
        <h2 class="mdl-card__title-text">Update User Profile</h2>
    </div>
    <div class="mdl-card__supporting-text mdl-color-text--grey-600">
        <form id="recordForm">
            <fieldset>
        
                <legend>Account Details</legend>
        
                <label for="user-name">Name</label>
                <input type="text" name="user-name" id="user-name-field" value="{{name}}"> <br>
        
                <label for="user-email">Email</label>
                <input type="text" name="user-email" id="user-email-field" value="{{email}}" disabled> <br>
        
                <label for="user-phone">Mobile Number</label>
                <input type="text" name="user-phone" id="user-phone-field" value="{{phone}}"> <br>
        
                <label for="user-date">Date of Birth</label>
                <input type="date" name="user-date" id="user-date-field" value="{{birthday}}"> <br>
        
                {{#if subscribe}}
                    <label for="subscribe">Subscribe to Newsletter</label>
                    <label for="subscribe">Yes</label>
                    <input type="radio" name="subscribe" value="1" id="sub-yes" checked="checked">

                    <label for="subscribe">No</label>
                    <input type="radio" name="subscribe" value="0" id="sub-no"><br>
        
                {{else}}
                    <label for="subscribe">Subscribe to Newsletter</label>
                    <label for="subscribe">Yes</label>
                    <input type="radio" name="subscribe" value="1" id="sub-yes">

                    <label for="subscribe">No</label>
                    <input type="radio" name="subscribe" value="0" id="sub-no" checked="checked"><br>
                {{/if}}
                
                {{#if alerts}}
                    <label for="alerts">Receive Mobile Alerts</label>
                    <label for="alerts">Yes</label>
                    <input type="radio" name="alerts" value="1" id="alerts-yes" checked="checked">

                    <label for="alerts">No</label>
                    <input type="radio" name="alerts" value="0" id="alerts-no"><br>
                
                {{else}}
                    <label for="alerts">Receive Mobile Alerts</label>
                    <label for="alerts">Yes</label>
                    <input type="radio" name="alerts" value="1" id="alerts-yes">

                    <label for="alerts">No</label>
                    <input type="radio" name="alerts" value="0" id="alerts-no" checked="checked"><br>
                {{/if}}
                
                <input type="submit" id="save" value="Save" onclick="updateUser(document.getElementById('user-name-field').value, document.getElementById('user-email-field').value, document.getElementById('user-phone-field').value, document.getElementById('user-date-field').value, document.getElementsByName('subscribe'), document.getElementsByName('alerts'))">
                <input type="submit" id="cancel" value="Cancel" onclick="cancelEdit(document.getElementById('user-email-field').value)">
            </fieldset>
        </form>
        <br>
        

        <button class="mdl-button mdl-js-button mdl-button--raised" id="logout-button" onclick="window.location.href = 'http://web.engr.oregonstate.edu/~wrighada/index.html';" >Log Out</button>
    </div>
</div>
<script src="update-account.js"></script>